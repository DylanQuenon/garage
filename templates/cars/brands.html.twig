{% extends 'base.html.twig' %}

{% block title %}Voitures de la marque {{ brand }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Voitures de la marque {{ brand }}</h1>
    
        <div class="row">
            {% for car in cars %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <img src="{{ car.coverImage }}" class="card-img-top" alt="{{ car.nom }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ car.nom }}</h5>
                            <p class="card-text">
                                {% if car.introduction|length > 50 %}
                                    {{ car.introduction|slice(0, 50) ~ '...' }}
                                {% else %}
                                    {{ car.introduction }}
                                {% endif %}
                            </p>
                            <p class="card-text"><strong>Prix : {{ car.price }} â‚¬</strong></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
    </div>
{% endblock %}
