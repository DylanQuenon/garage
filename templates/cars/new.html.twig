{% extends "base.html.twig" %}
{% block title %}Ajouter nouvelle voiture
{% endblock %}
{% form_theme myForm _self %}
{% block body %}
	<div class="container">
		<h1>Nouvelle voiture</h1>
		{{ form_start(myForm) }}

		{{form_widget(myForm)}}
		<button type="submit" class="btn btn-primary mt-3">Cr√©ation d'une annonce</button>
		{{ form_end(myForm) }}
